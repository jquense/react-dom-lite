{
  "name": "react-dom-lite",
  "version": "0.3.0",
  "main": "lib/index.js",
  "license": "MIT",
  "scripts": {
    "build:dev":
      "ROLLUP=1 rollup -c scripts/rollup.config.js && cp npm/index.js lib/",
    "build:prod":
      "ROLLUP=1 NODE_ENV=production rollup -c scripts/rollup.config.js  && cp npm/index.js lib/",
    "build": "npm run build:dev && npm run build:prod",
    "watch": "npm run babel -- --watch",
    "examples": "NODE_ENV=production webpack --bail",
    "prettier": "prettier --write src/**/*.js",
    "precommit": "lint-staged",
    "pretest": "npm run flow && eslint src test",
    "prepublishOnly": "npm run test && npm run build",
    "test": "jest",
    "tdd": "jest --watch",
    "flow": "flow"
  },
  "files": ["lib"],
  "lint-staged": {
    "src/**/*.{js}": ["eslint"],
    "*.{js,json,css,md}": ["prettier --write", "git add"]
  },
  "eslintIgnore": ["flow-typed"],
  "jest": {
    "roots": ["<rootDir>/src"],
    "setupFiles": ["./test/setup.js"],
    "setupTestFrameworkScriptFile": "./test/setupTests.js",
    "moduleNameMapper": {
      "react-dom-lite/test-utils": "<rootDir>/src/test-utils.js",
      "react-dom-lite": "<rootDir>/src/index.js"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.39",
    "@babel/core": "^7.0.0-beta.39",
    "@babel/plugin-external-helpers": "^7.0.0-beta.39",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.39",
    "@babel/preset-env": "^7.0.0-beta.39",
    "@babel/preset-flow": "^7.0.0-beta.39",
    "@babel/preset-react": "^7.0.0-beta.39",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "^8.0.0",
    "babel-jest": "^22.1.0",
    "compression-webpack-plugin": "^1.1.6",
    "eslint": "^4.16.0",
    "eslint-config-jason": "^4.0.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-flow": "^2.29.1",
    "eslint-plugin-flowtype": "^2.42.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-react": "^7.6.1",
    "flow-bin": "^0.61.0",
    "global": "^4.3.2",
    "google-closure-compiler": "^20180716.0.1",
    "husky": "^0.14.3",
    "jest": "^22.1.4",
    "lint-staged": "^6.1.0",
    "maxmin": "^2.1.0",
    "prettier": "^1.10.2",
    "react": "^16.3.0",
    "react-reconciler": "0.12.0",
    "rollup": "^0.55.1",
    "rollup-plugin-babel": "4.0.0-beta.1",
    "rollup-plugin-bundle-size":
      "https://github.com/vimeo/rollup-plugin-bundle-size",
    "rollup-plugin-closure-compiler-js": "^1.0.6",
    "rollup-plugin-commonjs": "^8.3.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-replace": "^2.0.0",
    "sinon": "^4.2.2",
    "webpack": "^3.10.0",
    "webpack-atoms": "^5.0.0",
    "webpack-dev-server": "^2.11.1"
  },
  "dependencies": {
    "dom-helpers": "^3.3.1",
    "fbjs": "^0.8.17"
  },
  "peerDependencies": {
    "react": "^16.0.0"
  }
}
