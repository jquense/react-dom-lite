{
  "name": "react-dom-lite",
  "version": "0.3.0",
  "main": "lib/react-dom-lite.js",
  "license": "MIT",
  "scripts": {
    "build:dev": "ROLLUP=1 rollup -c scripts/rollup.config.js",
    "build:prod":
      "ROLLUP=1 NODE_ENV=production rollup -c scripts/rollup.config.js",
    "build": "npm run build:dev && npm run build:prod",
    "watch": "npm run babel -- --watch",
    "examples": "NODE_ENV=production webpack --bail",
    "prettier": "prettier --write src/**/*.js",
    "precommit": "lint-staged",
    "pretest": "npm run flow && eslint src test",
    "prepublishOnly": "npm run test && npm run build",
    "test": "jest",
    "tdd": "jest --watch",
    "flow": "flow"
  },
  "files": ["lib"],
  "lint-staged": {
    "src/**/*.{js}": ["eslint"],
    "*.{js,json,css,md}": ["prettier --write", "git add"]
  },
  "eslintIgnore": ["flow-typed"],
  "jest": {
    "roots": ["<rootDir>/src"],
    "setupFiles": ["./test/setup.js"],
    "setupTestFrameworkScriptFile": "./test/setupTests.js",
    "moduleNameMapper": {
      "react-dom-lite/test-utils": "<rootDir>/src/test-utils.js",
      "react-dom-lite": "<rootDir>/src/index.js"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.44",
    "@babel/core": "^7.0.0-beta.44",
    "@babel/plugin-external-helpers": "^7.0.0-beta.44",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.44",
    "@babel/preset-env": "^7.0.0-beta.44",
    "@babel/preset-flow": "^7.0.0-beta.44",
    "@babel/preset-react": "^7.0.0-beta.44",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^22.4.3",
    "compression-webpack-plugin": "^1.1.6",
    "eslint": "^4.19.1",
    "eslint-config-jason": "^4.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-flow": "^2.29.1",
    "eslint-plugin-flowtype": "^2.46.2",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-react": "^7.7.0",
    "flow-bin": "^0.70.0",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "lint-staged": "^7.0.4",
    "prettier": "^1.12.1",
    "react-dom": "^16.3.2",
    "rollup": "^0.58.1",
    "rollup-plugin-babel": "4.0.0-beta.1",
    "rollup-plugin-closure-compiler-js": "^1.0.6",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-replace": "^2.0.0",
    "sinon": "^4.5.0",
    "webpack": "^3.10.0",
    "webpack-atoms": "^5.0.0",
    "webpack-dev-server": "^2.11.1"
  },
  "dependencies": {
    "dom-helpers": "^3.3.1",
    "global": "^4.3.2",
    "invariant": "^2.2.4",
    "react": "^16.3.2",
    "react-reconciler": "^0.10.0"
  }
}
